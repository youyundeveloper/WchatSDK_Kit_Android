<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@color/wm_expression_bg_1_7"
    android:gravity="center" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/exp_logo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/expression_cos_logo"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout 
            android:id="@+id/p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/exp_logo"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="@string/wm_expression_cos"/>
            <TextView 
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:text="@string/wm_expression_cos"/>
        </LinearLayout>
        <Button 
            android:id="@+id/downloadBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wm_download"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/wm_v1_6_blue_btn"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/exp_logo"
            android:layout_below="@id/p2"
            android:layout_marginRight="40dp"
            android:visibility="gone"/>
        <LinearLayout 
            android:id="@+id/downloading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/exp_logo"
            android:layout_below="@id/p2"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:visibility="visible">
            <ProgressBar 
		       android:id="@+id/progress"
		       android:layout_width="0dp"
		       android:layout_height="wrap_content"
		       android:layout_weight="1"
		       android:max="100"
		       style="@style/ExpressionDownloadProgressBar"
		       android:layout_marginRight="5dp"/>
            <ImageButton 
                android:id="@+id/download_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wm_exp_download_cancel"/>
        </LinearLayout>
        
    </RelativeLayout>
    <TextView 
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#808080"
        android:textSize="12sp"
        android:text="@string/wm_expression_package_hint"
        android:gravity="center_horizontal|bottom"
        android:singleLine="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</LinearLayout>